<div id='content'>
  <h1><%= name %></h1>
  <div><%= description %></div>
  <button class='upvote vote' id='<%= id %>'>Upvote!</button>
  <button class='downvote vote' id='<%= id %>'>Downvote!</button>
  <div class='vote_counter' id='<%= id %>'>Vote Count: <%= vote_count %></div>
  <% if(gon.current_user){ %>
    <button class='deleteButton' id='<%= id %>'>Delete!</button>
  <% } %>
  <button class='showPhotosButton showHide' id='<%= id %>'>Show Photos!</button>

  <div class='photosContent hidden' id='<%= id %>'>
    <button class='hidePhotosButton showHide' id='<%= id %>'>Hide Photos!</button>
    <% if(gon.current_user){ %>
      <a href="/potholes/<%= id %>/photos"><button class='addPhotosButton' id='<%= id %>'>Upload a Photo</button></a>
    <% } %>

